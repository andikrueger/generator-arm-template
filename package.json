{
  "name": "generator-arm-template",
  "version": "0.2.0",
  "description":
    "Azure Resource Manager template tools, built especially for VS Code!",
  "homepage": "https://github.com/BrianFarnhill/generator-arm-template",
  "author": {
    "name": "Brian Farnhill",
    "email": "brian@farnhill.net",
    "url": "http://brianfarnhill.com"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": ["ARM", "Azure", "Resource Manager", "yeoman-generator"],
  "devDependencies": {
    "azure-naming-conventions": "^0.1.1",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "fs-extra": "^4.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "mocha": "^4.0.1",
    "mocha-junit-reporter": "^1.15.0",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-generator": "^2.0.1",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "yosay": "^2.0.1",
    "yeoman-generator": "^2.0.1"
  },
  "scripts": {
    "prepare": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "mocha __tests__",
    "test:ci":
      "mocha __tests__ --reporter mocha-junit-reporter --reporter-options mochaFile=C:\\MochaResults.xml"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "mocha": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "https://github.com/BrianFarnhill/generator-arm-template.git",
  "license": "MIT"
}
